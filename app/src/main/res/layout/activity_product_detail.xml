<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <!-- 导航栏 -->
    <include layout="@layout/category_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="164px"
        android:layout_marginRight="257px"
        android:layout_marginTop="80px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_image_content"
            android:layout_width="524px"
            android:layout_height="656px"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <include layout="@layout/product_detail_item" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_pic_recyclerView"
                android:layout_width="381px"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>