<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_tag_image"
        android:layout_width="301px"
        android:layout_height="374px"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_marginTop="10px"
        android:orientation="vertical"
        android:paddingLeft="19px"
        android:paddingRight="19px"
        android:layout_below="@+id/id_tag_image"
        android:layout_width="308px"
        android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/white"
        android:textSize="20px"
        android:gravity="start"
        android:singleLine="true"
        android:id="@+id/id_tag_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小米 红色NOTE3 双网通版" />

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/id_price"
        android:textColor="#FFFF33"
        android:textSize="28px"
        android:text="¥ 1099"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>