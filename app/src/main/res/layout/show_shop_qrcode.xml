<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#dd000000">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:padding="30dp"
        android:background="@color/black"
        android:scaleType="centerInside"
        android:src="@drawable/qrcode_bg"
        android:layout_width="500dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="145dp"
        android:layout_marginTop="310dp"
        android:scaleType="centerInside"
        android:src="@drawable/product_qrcode"
        android:layout_width="220dp"
        android:layout_height="220dp" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/qrcode_text1"
            android:layout_toLeftOf="@+id/qrcode_text2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="点击"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toLeftOf="@+id/qrcode_text3"
            android:id="@+id/qrcode_text2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text='"任意区域"'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/qrcode_text3"
            android:textSize="20sp"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:text="退出二维码页面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</FrameLayout>